{
  "name": "markdown-captions",
  "displayName": "Markdown Captions",
  "description": "Syntax highlighting for photo/video captions in Markdown",
  "license": "MIT",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Neighborkid01/markdown-captions.git"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
		"multi-root ready"
	],
  "engines": {
    "vscode": "^1.87.0"
  },
  "scripts": {
    "build": "node build",
    "vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
  "main": "./client/out/extension",
  "contributes": {
    "languages": [{
      "id": "Markdown-Captions",
      "aliases": ["Markdown Captions", "mdcaptions"],
      "extensions": [".md",".mdc",".mdown",".markdown",".markdn"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "Markdown-Captions",
      "scopeName": "text.html.markdown.captions",
      "path": "./syntaxes/markdown-captions.tmLanguage"
    }],
    "configuration": {
			"type": "object",
			"title": "Markdown Captions Configuration",
			"properties": {
				"languageServerExample.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"languageServerExample.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
  },
  "devDependencies": {
    "js-yaml": "^3.13.1",
    "plist": "^3.0.4",
    "@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
  }
}
